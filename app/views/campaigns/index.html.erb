<h1><%= Campaign.model_name.human.capitalize %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.campaign.ident') %></th>
      <th><%= t('activerecord.attributes.campaign.name') %></th>
      <th><%= t('activerecord.attributes.campaign.priority') %></th>
      <th><%= t('activerecord.attributes.campaign.created_in_sprint') %></th>
      <th><%= t('activerecord.attributes.campaign.updated_in_sprint') %></th>
      <th><%= t('activerecord.attributes.campaign.campaign_origin') %></th>
      <th><%= t('activerecord.attributes.campaign.channel') %></th>
      <th><%= t('activerecord.attributes.campaign.communication_channel') %></th>
      <th><%= t('activerecord.attributes.campaign.product') %></th>
      <th><%= t('activerecord.attributes.campaign.description') %></th>
      <th><%= t('activerecord.attributes.campaign.criterion') %></th>
      <th><%= t('activerecord.attributes.campaign.exists_in_legacy') %></th>
      <th><%= t('activerecord.attributes.campaign.automatic_routine') %></th>
      <th><%= t('activerecord.attributes.campaign.factory_criterion_status') %></th>
      <th><%= t('activerecord.attributes.campaign.prioritized_variables_qty') %></th>
      <th><%= t('activerecord.attributes.campaign.complied_variables_qty') %></th>
      <th><%= t('activerecord.attributes.campaign.process_type') %></th>
      <th><%= t('activerecord.attributes.campaign.crm_room_suggestion') %></th>
      <th><%= t('activerecord.attributes.campaign.it_status') %></th>
      <th><%= t('activerecord.attributes.campaign.notes') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.ident %></td>
        <td><%= campaign.name %></td>
        <td><%= campaign.priority %></td>
        <td><%= campaign.created_in_sprint %></td>
        <td><%= campaign.updated_in_sprint %></td>
        <td><%= campaign.campaign_origin %></td>
        <td><%= campaign.channel %></td>
        <td><%= campaign.communication_channel %></td>
        <td><%= campaign.product %></td>
        <td><%= campaign.description %></td>
        <td><%= campaign.criterion %></td>
        <td><%= campaign.exists_in_legacy %></td>
        <td><%= campaign.automatic_routine %></td>
        <td><%= campaign.factory_criterion_status %></td>
        <td><%= campaign.prioritized_variables_qty %></td>
        <td><%= campaign.complied_variables_qty %></td>
        <td><%= campaign.process_type %></td>
        <td><%= campaign.crm_room_suggestion %></td>
        <td><%= campaign.it_status %></td>
        <td><%= campaign.notes %></td>
        <td><%= link_to t('show'), campaign %></td>
        <td><%= link_to t('edit'), edit_campaign_path(campaign) %></td>
        <td><%= link_to t('destroy'), campaign, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


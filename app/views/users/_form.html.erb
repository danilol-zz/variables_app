<%= form_for(@user, html: {class: "nav-form"}) do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :profile %>
      <%= f.select(:profile, User::PROFILES) %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.hidden_field :role, value: "user" %>

    <div class="field">
      <%= f.submit "Salvar" %>
    </div>
<% end %>

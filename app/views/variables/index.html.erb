<h1><%= Variable.model_name.human.capitalize %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.variable.name') %></th>
      <th><%= t('activerecord.attributes.variable.sas_variable_def') %></th>
      <th><%= t('activerecord.attributes.variable.sas_variable_domain') %></th>
      <th><%= t('activerecord.attributes.variable.created_in_sprint') %></th>
      <th><%= t('activerecord.attributes.variable.updated_in_sprint') %></th>
      <th><%= t('activerecord.attributes.variable.sas_data_model_status') %></th>
      <th><%= t('activerecord.attributes.variable.drs_bi_diagram_name') %></th>
      <th><%= t('activerecord.attributes.variable.drs_variable_status') %></th>
      <th><%= t('activerecord.attributes.variable.room_1_notes') %></th>
      <th><%= t('activerecord.attributes.variable.physical_model_name_field') %></th>
      <th><%= t('activerecord.attributes.variable.width_variable') %></th>
      <th><%= t('activerecord.attributes.variable.decimal_variable') %></th>
      <th><%= t('activerecord.attributes.variable.default_value') %></th>
      <th><%= t('activerecord.attributes.variable.room_2_notes') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variables.each do |variable| %>
      <tr>
        <td><%= variable.name %></td>
        <td><%= variable.sas_variable_def %></td>
        <td><%= variable.sas_variable_domain %></td>
        <td><%= variable.created_in_sprint %></td>
        <td><%= variable.updated_in_sprint %></td>
        <td><%= variable.sas_data_model_status %></td>
        <td><%= variable.drs_bi_diagram_name %></td>
        <td><%= variable.drs_variable_status %></td>
        <td><%= variable.room_1_notes %></td>
        <td><%= variable.physical_model_name_field %></td>
        <td><%= variable.width_variable %></td>
        <td><%= variable.decimal_variable %></td>
        <td><%= variable.default_value %></td>
        <td><%= variable.room_2_notes %></td>
        <td><%= link_to t('show'), variable %></td>
        <td><%= link_to t('edit'), edit_variable_path(variable) %></td>
        <td><%= link_to t('destroy'), variable, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


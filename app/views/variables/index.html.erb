<h1><%= Variable.model_name.human.capitalize %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.variable.name') %></th>
      <th><%= t('activerecord.attributes.variable.created_in_sprint') %></th>
      <th><%= t('activerecord.attributes.variable.updated_in_sprint') %></th>
      <th><%= t('activerecord.attributes.variable.default_value') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variables.each do |variable| %>
      <tr>
        <td><%= variable.name %></td>
        <td><%= variable.created_in_sprint %></td>
        <td><%= variable.updated_in_sprint %></td>
        <td><%= variable.default_value %></td>
        <td><%= link_to t('show'), variable %></td>
        <td><%= link_to t('edit'), edit_variable_path(variable) %></td>
        <td><%= link_to t('destroy'), variable, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

